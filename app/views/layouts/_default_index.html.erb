<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="margin">
        <%= decorated_object.link_to_new %>
      </div>

      <div class="box-body table-responsive">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline" role="grid">
          <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
            <% if index_data.present? %>
              <thead>
                <tr>
                  <% index_data.first.each do |obj| %>
                    <th><%= obj[:title] %></th>
                  <% end %>
                </tr>
              </thead>
              <tbody role="alert" aria-live="polite" aria-relevant="all">
                <% index_data.each_with_index do |obj, index| %>
                  <tr>
                    <% obj.each do |data| %>
                      <td><%= data[:value] %></td>
                    <% end %>
                  </tr>
                <% end %>
              </tbody>
            <% end %>
          </table>
          <div class="row">
            <%= paginate object %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>