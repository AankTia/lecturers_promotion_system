<%= form_for(object) do |f| %>
  <div class="box-body">
    <div class="form-group <%= error_class(object, :lecturer_id)%>">
      <label>
        Dosen
        <%= error_messages(object, :lecturer_id) %>
      </label>
      <%= f.collection_select(
            :lecturer_id,
            Lecturer.active, :id, :name,
            { include_blank: true },
            { class: "form-control" }
          ) %>
    </div>
    <div class="form-group <%= error_class(object, :assessor_id)%>">
      <label>
        Penilai
        <%= error_messages(object, :assessor_id) %>
      </label>
      <%= f.collection_select(
            :assessor_id,
            Assessor.active, :id, :name,
            { include_blank: true },
            { class: "form-control" }) %>
    </div>

    <div class="form-group <%= error_class(object, :assessment_range_id)%>">
      <label>
        Waktu Penilaian
        <%= error_messages(object, :assessment_range_id) %>
      </label>
      <%= f.collection_select(
            :assessment_range_id,
            AssessmentRange.active, :id, :code,
            { include_blank: true },
            { class: "form-control" }) %>
    </div>

    <%= f.fields_for :assessment_result_lines do |builder| %>
      <%= render 'assessment_result_line_fields', f: builder  %>
    <% end %>
  </div>

  <div class="box-footer">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>