<%= form_for(object, html: { class: "form-horizontal form-label-left"}) do |f| %>
  <div class="box-body">
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        NIK
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field  :registration_number_of_employees,
                          class: "form-control #{error_class(object, :registration_number_of_employees)}" %>
        <%= error_messages(object, :registration_number_of_employees) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Nama
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field  :name,
                          class: "form-control #{error_class(object, :name)}" %>
        <%= error_messages(object, :name) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Tempat Lahir
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :place_of_birth, class: "form-control #{error_class(object, :place_of_birth)}" %>
        <%= error_messages(object, :place_of_birth) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Tanggal Lahir
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.date_field :date_of_birth, class: "form-control #{error_class(object, :date_of_addmission)}" %>
        <%= error_messages(object, :date_of_addmission) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Jenis Kelamin
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.select(
              :gender,
              options_for_select(Assessor.gender.options, object.gender),
              { include_blank: true },
              { class: "form-control #{error_class(object, :gender)}" }) %>
        <%= error_messages(object, :gender) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Status Pernikahan
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.select(
              :marital_status,
              options_for_select(Assessor.marital_status.options, object.marital_status),
              { include_blank: true },
              { class: "form-control #{error_class(object, :marital_status)}" }) %>
        <%= error_messages(object, :marital_status) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Nomor Kontak
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :contact_number, class: "form-control #{error_class(object, :contact_number)}" %>
        <%= error_messages(object, :contact_number) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Pendidikan
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.select(
              :education,
              options_for_select(Assessor.education.options, object.education),
              { include_blank: true },
              { class: "form-control #{error_class(object, :education)}" }) %>
        <%= error_messages(object, :education) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Alamat
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :address_line1, class: "form-control #{error_class(object, :address_line1)}" %><br />
        <%= f.text_field :address_line2, class: "form-control #{error_class(object, :address_line2)}" %><br />
        <%= f.text_field :address_line3, class: "form-control #{error_class(object, :address_line3)}" %><br />
        <%= f.text_field :address_line4, class: "form-control #{error_class(object, :address_line4)}" %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Posisi
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :position, class: "form-control #{error_class(object, :position)}" %>
        <%= error_messages(object, :position) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Program Studi
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.collection_select(
              :study_program_id,
              StudyProgram.all, :id, :name,
              { include_blank: true },
              { class: "form-control #{error_class(object, :study_program_id)}" }
            ) %>
        <%= error_messages(object, :study_program_id) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Pangkat
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.collection_select(
              :rank_of_lecturer_id,
              RankOfLecturer.all, :id, :name,
              { include_blank: true },
              { class: "form-control #{error_class(object, :rank_of_lecturer_id)}" }
            ) %>
        <%= error_messages(object, :rank_of_lecturer_id) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Date of Addmission
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.date_field :date_of_addmission, class: "form-control #{error_class(object, :date_of_addmission)}" %>
        <%= error_messages(object, :date_of_addmission) %>
      </div>
    </div>
  </div>

  <div class="ln_solid"></div>
  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>