<%= form_for(object) do |f| %>
  <%= render "layouts/form_error_messages", object: object %>

  <div class="box-body">
    <div class="form-group <%= error_class(object, :faculty_id)%>">
      <label>
        Fakultas
        <%= error_messages(object, :faculty_id) %>
      </label>
      <%= f.collection_select(
            :faculty_id,
            Faculty.all, :id, :name,
            { include_blank: true },
            { class: "form-control" }) %>
    </div>

    <div class="form-group <%= error_class(object, :code)%>">
      <label>
        Kode
        <%= error_messages(object, :code) %>
      </label>
      <%= f.text_field :code, class: "form-control" %>
    </div>

    <div class="form-group <%= error_class(object, :name)%>">
      <label>
        Nama
        <%= error_messages(object, :name) %>
      </label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Deskripsi</label>
      <%= f.text_area :description, rows: 3, class: "form-control" %>
    </div>
  </div>

  <div class="box-footer">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>