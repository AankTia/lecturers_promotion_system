<%= form_for(object, html: { class: "form-horizontal form-label-left"}) do |f| %>
  <div class="box-body">
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Kode
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <% if object.new_record? %>
          <%= f.text_field :code, class: "form-control #{error_class(object, :code)}" %>
          <%= error_messages(object, :code) %>
        <% else %>
          <label class="control-label">
            <%= object.code %>
          </label>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Nama
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, class: "form-control #{error_class(object, :name)}"%>
        <%= error_messages(object, :name) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Jenjang
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.select(
              :education_level,
              options_for_select(StudyProgram.education_level.options, object.education_level),
              { include_blank: true },
              { class: "form-control #{error_class(object, :education_level)}" }) %>
        <%= error_messages(object, :education_level) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Fakultas
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.collection_select(
              :faculty_id,
              Faculty.all, :id, :name,
              { include_blank: true },
              { class: "form-control #{error_class(object, :faculty_id)}" }) %>
        <%= error_messages(object, :faculty_id) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Deskripsi
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :description, rows: 3, class: "form-control #{error_class(object, :description)}" %>
        <%= error_messages(object, :description) %>
      </div>
    </div>
  </div>

  <div class="ln_solid"></div>
  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>