<%= form_for(object) do |f| %>
  <%= render "layouts/form_error_messages", object: object %>

  <div class="box-body">
    <div class="form-group <%= error_class(object, :name)%>">
      <label>
        Nama
        <%= error_messages(object, :name) %>
      </label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group <%= error_class(object, :value)%>">
      <label>
        Nilai
        <%= error_messages(object, :value) %>
      </label>
      <div class="input-group">
        <%= f.number_field :value, step: 'any', class: "form-control" %>
        <span class="input-group-addon">%</span>
      </div>
    </div>
    <div class="form-group <%= error_class(object, :description)%>">
      <label>
        Deskripsi
        <%= error_messages(object, :description) %>
      </label>
      <%= f.text_area :description, rows: 3, class: "form-control" %>
    </div>
  </div>

  <div class="box-footer">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>