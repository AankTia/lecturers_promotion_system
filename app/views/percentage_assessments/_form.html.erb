<%= form_for(object, html: { class: "form-horizontal form-label-left"}) do |f| %>
  <div class="box-body">
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Nama
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, class: "form-control #{error_class(object, :name)}" %>
        <%= error_messages(object, :name) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Nilai
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="input-group">
          <%= f.number_field :value, step: 'any', class: "form-control #{error_class(object, :value)}" %>
          <span class="input-group-addon">%</span>
        </div>
        <%= error_messages(object, :value) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Deskripsi
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :description, rows: 3, class: "form-control #{error_class(object, :description)}" %>
        <%= error_messages(object, :description) %>
      </div>
    </div>
  </div>

  <div class="ln_solid"></div>
  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>