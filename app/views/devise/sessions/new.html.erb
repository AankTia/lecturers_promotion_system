        <%= f.submit "Sign in", class: "btn btn-default submit" %>
      </div>

      <div class="clearfix"></div>

      <div class="separator">
        <p class="change_link">
          <%= render "devise/shared/links" %>
        </p>
        <div class="clearfix"></div>
        <br />
        <div>
          <h1>Lecturer Promotion System</h1>
