<%= form_for(object, html: { class: "form-horizontal form-label-left"}) do |f| %>
  <div class="box-body">
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Nama
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, class: "form-control #{error_class(object, :name)}" %>
        <%= error_messages(object, :name) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Symbol
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :symbol, class: "form-control #{error_class(object, :symbol)}" %>
        <%= error_messages(object, :symbol) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Gaji Pokok
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.number_field :basic_salary, class: "form-control #{error_class(object, :basic_salary)}" %>
        <%= error_messages(object, :basic_salary) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Deskripsi
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :description, rows: 3, class: "form-control #{error_class(object, :description)}" %>
        <%= error_messages(object, :description) %>
      </div>
    </div>
  </div>

  <div class="ln_solid"></div>
  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>