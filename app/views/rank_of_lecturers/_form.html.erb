<%= form_for(object) do |f| %>
  <%= render "layouts/form_error_messages", object: object %>

  <div class="box-body">
    <div class="form-group <%= error_class(object, :name)%>">
      <label>
        Nama
        <%= error_messages(object, :name) %>
      </label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group <%= error_class(object, :symbol)%>">
      <label>
        Symbol
        <%= error_messages(object, :symbol) %>
      </label>
      <%= f.text_field :symbol, class: "form-control" %>
    </div>
    <div class="form-group <%= error_class(object, :basic_salary)%>">
      <label>
        Gaji Pokok
        <%= error_messages(object, :basic_salary) %>
      </label>
      <%= f.number_field :basic_salary, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Deskripsi</label>
      <%= f.text_area :description, rows: 3, class: "form-control" %>
    </div>
  </div>

  <div class="box-footer">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>