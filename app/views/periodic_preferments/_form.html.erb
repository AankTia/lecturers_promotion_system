<%= form_for(object) do |f| %>
  <div class="box-body">
    <div class="form-group <%= error_class(object, :preferment_id)%>">
      <label>
        Kenaikan Pangkat
        <%= error_messages(object, :preferment_id) %>
      </label>
      <%= f.collection_select(
            :preferment_id,
            Preferment.completed, :id, :id,
            { include_blank: true },
            { class: "form-control" }
          ) %>
    </div>
    <div class="form-group <%= error_class(object, :periodic_preferment_number)%>">
      <label>
        No SK Kenaikan Pangkat Berkala
        <%= error_messages(object, :periodic_preferment_number) %>
      </label>
      <%= f.text_field :periodic_preferment_number, class: "form-control" %>
    </div>
    <div class="form-group <%= error_class(object, :periodic_preferment_date)%>">
      <label>
        Tanggal Kenaikan Pangat Berkala
        <%= error_messages(object, :periodic_preferment_date) %>
      </label>
      <%= f.date_field :periodic_preferment_date, class: "form-control" %>
    </div>
  </div>

  <div class="box-footer">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>