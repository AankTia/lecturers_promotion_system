<%= form_for(object, html: { class: "form-horizontal form-label-left"}) do |f| %>
  <div class="box-body">
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Kenaikan Pangkat
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.collection_select(
              :preferment_id,
              Preferment.completed, :id, :id,
              { include_blank: true },
              { class: "form-control #{error_class(object, :preferment_id)}" }
            ) %>
        <%= error_messages(object, :preferment_id) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        No SK Kenaikan Pangkat Berkala
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :periodic_preferment_number, class: "form-control #{error_class(object, :periodic_preferment_number)}" %>
        <%= error_messages(object, :periodic_preferment_number) %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-3 col-sm-3 col-xs-12">
        Tanggal Kenaikan Pangat Berkala
      </label>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.date_field :periodic_preferment_date, class: "form-control #{error_class(object, :periodic_preferment_date)}" %>
        <%= error_messages(object, :periodic_preferment_date) %>
      </div>
    </div>
  </div>

  <div class="ln_solid"></div>
  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>