<%= form_for(object) do |f| %>
  <%= render "layouts/form_error_messages", object: object %>

  <div class="box-body">
    <div class="form-group">
      <label>Kenaikan Pangkat</label>
      <%= f.collection_select(:preferment_id, Preferment.all, :id, :id, {include_blank: true}, {class: "form-control"}) %>
    </div>
    <div class="form-group">
      <label>No SK Kenaikan Pangkat Berkala</label>
      <%= f.text_field :periodic_preferment_number, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Tanggal Kenaikan Pangat Berkala</label>
      <%= f.date_field :periodic_preferment_date, class: "form-control" %>
    </div>
  </div>

  <div class="box-footer">
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>